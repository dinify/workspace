{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@dinify/common": ["common/src"],
      "@dinify/app": ["app/src"],
      "@dinify/dashboard": ["dashboard/src"],
      "@dinify/waiterboard": ["waiterboard/src"],
      "@dinify/*": ["*/src"]
    },
    "removeComments": true,

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  }
}
