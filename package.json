{
  "repository": "git@gitlab.com:tabb/frontend-web/dinify.git",
  "author": "Dinify",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/fsevents"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && npm run cert:add",
    "cert:add": "openssl x509 -outform der -in ./node_modules/webpack-dev-server/ssl/server.pem -out ./node_modules/webpack-dev-server/ssl/server.crt && security add-trusted-cert -k ~/Library/Keychains/login.keychain ./node_modules/webpack-dev-server/ssl/server.crt",
    "admin:dev": "cd packages/admin && npm start",
    "admin:build": "cd packages/admin && npm build",
    "admin:deploy": "cd packages/admin && npm deploy",
    "app:dev": "cd packages/app && npm start",
    "app:build": "cd packages/app && npm build",
    "app:deploy": "cd packages/app && npm deploy",
    "common:build": "cd packages/common && npm build",
    "landing:dev": "cd packages/landing && npm start",
    "landing:build": "cd packages/landing && npm build",
    "landing:deploy": "cd packages/landing && npm deploy",
    "functions:dev": "cd packages/functions && npm start",
    "functions:build": "cd packages/functions && npm build",
    "functions:deploy": "cd packages/functions && npm deploy",
    "dash:dev": "cd packages/dashboard && npm start",
    "dash:build": "cd packages/dashboard && npm build",
    "dash:deploy": "cd packages/dashboard && npm deploy",
    "waiter:dev": "cd packages/waiterboard && npm start",
    "waiter:build": "cd packages/waiterboard && npm build",
    "waiter:deploy": "cd packages/waiterboard && npm deploy",
    "jest": "jest --coverage --verbose --color"
  },
  "devDependencies": {
    "lerna": "^3.18.1"
  }
}
